{% extends 'base.html.twig' %}

{% block title %}Review index{% endblock %}

{% block body %}
    <h1>Review index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Grade</th>
                <th>TextReview</th>
                <th>DateReview</th>
                <th>Status</th>
                <th>PhotoReview</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for review in reviews %}
            <tr>
                <td>{{ review.id }}</td>
                <td>{{ review.grade }}</td>
                <td>{{ review.textReview }}</td>
                <td>{{ review.dateReview ? review.dateReview|date('Y-m-d') : '' }}</td>
                <td>{{ review.status ? 'Yes' : 'No' }}</td>
                <td>{{ review.photoReview }}</td>
                <td>
                    <a href="{{ path('app_review_show', {'id': review.id}) }}">show</a>
                    <a href="{{ path('app_review_edit', {'id': review.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_review_new') }}">Create new</a>
{% endblock %}
